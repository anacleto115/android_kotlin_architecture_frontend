<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="horizontal"
    android:padding="10dp">
    <LinearLayout android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView android:id="@+id/file"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="5dp"/>

        <LinearLayout android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout android:id="@+id/ctSsn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView android:id="@+id/lbSsn"
                    android:text="lbSsn"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:textColor="@color/gray"/>

                <TextView android:id="@+id/ssn"
                    android:text="ssn"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"/>
            </LinearLayout>

            <LinearLayout android:id="@+id/ctName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/ctSsn">
                <TextView android:id="@+id/lbName"
                    android:text="lbName"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:textColor="@color/gray"/>

                <TextView android:id="@+id/name"
                    android:text="name"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"/>
            </LinearLayout>

            <LinearLayout android:id="@+id/ctType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/ctName">
                <TextView android:id="@+id/lbType"
                    android:text="lbType"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:textColor="@color/gray"/>

                <TextView android:id="@+id/type"
                    android:text="type"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"/>
            </LinearLayout>

            <LinearLayout android:id="@+id/ctBorn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/ctType">
                <TextView android:id="@+id/lbBorn"
                    android:text="lbBorn"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:textColor="@color/gray"/>

                <TextView android:id="@+id/born"
                    android:text="born"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"/>
            </LinearLayout>

            <LinearLayout android:id="@+id/ctState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/ctBorn">
                <TextView android:id="@+id/lbState"
                    android:text="lbState"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:textColor="@color/gray"/>

                <TextView android:id="@+id/state"
                    android:text="state"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>